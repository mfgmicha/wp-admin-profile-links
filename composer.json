{
    "name": "mfgmicha/admin-profile-links",
    "description": "Adds links to the current author page in the admin bar.",
    "type": "wordpress-plugin",
    "license": "LGPL-2.0-or-later",
    "authors": [
        {
            "name": "Micha Krapp",
            "email": "micha@mfgmicha.de"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "squizlabs/php_codesniffer": "@stable"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
      "wpcs":  "vendor/bin/phpcs",
      "make-pot": "wp i18n make-pot . languages/admin-profile-links.pot --slug=admin-profile-links --domain=admin-profile-links --exclude=node_modules,vendor,test"
    }
}
